<!-- Footer -->
<footer class="text-center text-lg-start bg-light text-muted w-100">
  <section class="d-flex justify-content-left justify-content-lg-between p-2 border-bottom">
    <!-- Left -->
    <div class="me-1 d-none d-lg-block">
      <a class="text-reset fw-bold" href="#">{{ (channel ~ '.footer.ready_for_offers')|trans|raw }}</a>
    </div>
    <!-- Left -->
  </section>

  <section class="">
    <div class="container text-center text-md-start mt-1">
      <div class="row">
        <div class="me-3 col-auto">
          {{ (channel ~ '.footer.using_service_agreement')|trans|raw }} <a href="#" class="showTermsbtn">{{ (channel ~ '.footer.terms_of_use')|trans|raw }}</a>
          et notre <a href="#" class="showPrivacybtn">{{ (channel ~ '.footer.privacy_policy')|trans|raw }}</a>.
          {{ (channel ~ '.footer.not_responsible')|trans|raw({'{{ companyName }}': companyName})|raw }}
          {{ (channel ~ '.footer.questions_contact')|trans|raw }} <a href="mailto:{{ contactEmail }}">{{ contactEmail }}</a>.
        </div>
      </div>
    </div>
  </section>

  <div class="text-center p-2" style="background-color: rgba(0, 0, 0, 0.05);">
    {{ "now"|date("Y") }} <a class="text-reset fw-bold" href="#">{{ companyName }}</a>.
    {{ (channel ~ '.footer.all_rights_reserved')|trans|raw }}
    | <a href="#" class="showTermsbtn"> {{ (channel ~ '.footer.conditions')|trans|raw }}</a>
    | <a href="#" class="showPrivacybtn"> {{ (channel ~ '.footer.privacy')|trans|raw }}</a>
    | <a href="#" class="showContactbtn">{{ (channel ~ '.footer.contact')|trans|raw }}</a>
  </div>
</footer>
<!-- Footer -->
