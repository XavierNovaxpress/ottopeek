<!-- Footer -->
<footer class="text-center text-lg-start bg-light text-muted w-100">
  <section class="d-flex justify-content-left justify-content-lg-between p-2 border-bottom">
    <!-- Left -->
    <div class="me-1 d-none d-lg-block">
      <a class="text-reset fw-bold" href="#">{{ 'footer.ready_for_offers'|trans }}</a>
    </div>
    <!-- Left -->
  </section>

  <section class="">
    <div class="container text-center text-md-start mt-1">
      <div class="row">
        <div class="me-3 col-auto">
          {{ 'footer.using_service_agreement'|trans }} <a href="#" class="showTermsbtn">{{ 'footer.terms_of_use'|trans }}</a>
          et notre <a href="#" class="showPrivacybtn">{{ 'footer.privacy_policy'|trans }}</a>.
          {{ 'footer.not_responsible'|trans({'{{ companyName }}': companyName})|raw }}
          {{ 'footer.questions_contact'|trans }} <a href="mailto:{{ contactEmail }}">{{ contactEmail }}</a>.
        </div>
      </div>
    </div>
  </section>

  <div class="text-center p-2" style="background-color: rgba(0, 0, 0, 0.05);">
    {{ "now"|date("Y") }} <a class="text-reset fw-bold" href="#">{{ companyName }}</a>.
    {{ 'footer.all_rights_reserved'|trans }}
    | <a href="#" class="showTermsbtn"> {{ 'footer.conditions'|trans }}</a>
    | <a href="#" class="showPrivacybtn"> {{ 'footer.privacy'|trans }}</a>
    | <a href="#" class="showContactbtn">{{ 'footer.contact'|trans }}</a>
  </div>
</footer>
<!-- Footer -->
