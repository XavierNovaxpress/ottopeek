 <section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="{{ webrootURL }}/public/media/{{ channel }}/image5.webp" alt="{{ (channel ~ '.checkout.section1.image.alt')|trans|raw }}" class="img-fluid rounded lazyload">
            </div>
            <div class="col-md-6">

                     <span class="stars">
                         {% for i in 1..4 %}
                             <i class="fa-solid fa-star text-warning"></i>
                         {% endfor %}
                         <i class="fa-solid fa-star-half-stroke text-warning"></i>
                     </span>
                    {{ (channel ~ '.home.section1.stats3')|trans|raw }}

                <h3 class="fs-1 mt-4">{{ (channel ~ '.checkout.section1.offre')|trans|raw }}</h3>
                <div class="row my-3">
                    <div class="col auto">
                        <h2><s class="text-muted">{{ (channel ~ '.checkout.section1.ancien_prix')|trans|raw }}</s> <span class="text-primary"> {{ (channel ~ '.checkout.section1.prix')|trans|raw }}</span></h2>
                    </div>
                    <div class="col auto">
                        <span class="text-success">{{ (channel ~ '.checkout.section1.stock')|trans|raw }}</span>
                        <span class="badge bg-danger p-2 fs-6">{{ (channel ~ '.checkout.section1.promotion')|trans|raw }}</span>
                    </div>
                </div>
                <div class="my-3">
                    <h4 class="text-primary fs-6">{{ (channel ~ '.checkout.section1.rapports')|trans|raw }}</h4>
                    <select class="form-select">
                        <option>{{ (channel ~ '.checkout.section1.rapports_option')|trans|raw }}</option>
                    </select>
                </div>
                <div class="my-3">
                    <label class="text-primary" for="quantite">{{ (channel ~ '.checkout.section1.quantite')|trans|raw }}</label>
                    <div class="d-flex align-items-center gap-3 mt-2">
                        <input type="number" min="1" value="2" class="form-control w-25" id="quantite">
                        <button class="btn btn-warning w-100">{{ (channel ~ '.checkout.section1.bouton')|trans|raw }}</button>
                    </div>
                </div>
                <ul class="list-unstyled my-5">
                    <li class="my-3">
                        <i class="fa-solid fa-truck text-primary me-3 fs-4"></i>
                        {{ (channel ~ '.checkout.section1.livraison')|trans|raw }}
                    </li>
                    <li class="my-3">
                        <i class="fa-solid fa-calendar text-primary me-3 fs-4"></i>
                         {{ (channel ~ '.checkout.section1.garantie')|trans|raw }}
                    </li>
                    <li class="my-3">
                        <i class="fa-solid fa-headset text-primary me-3 fs-4"></i>
                        {{ (channel ~ '.checkout.section1.assistance')|trans|raw }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
