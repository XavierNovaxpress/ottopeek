 <section class="container my-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="{{ webrootURL }}/public/media/{{ channel }}/image5.webp" alt="{{ (channel ~ '.checkout.section1.image.alt')|trans|raw }}" class="img-fluid rounded lazyload">
            </div>
            <div class="col-md-6">
                <h3>{{ (channel ~ '.checkout.section1.offre')|trans|raw }}</h3>
                <div>
                    <h2>{{ (channel ~ '.checkout.section1.prix')|trans|raw }}</h2>
                    <span class="text-muted">{{ (channel ~ '.checkout.section1.ancien_prix')|trans|raw }}</span>
                    <span class="badge bg-success">{{ (channel ~ '.checkout.section1.stock')|trans|raw }}</span>
                    <span class="badge bg-danger">{{ (channel ~ '.checkout.section1.promotion')|trans|raw }}</span>
                </div>
                <div>
                    <h4>{{ (channel ~ '.checkout.section1.rapports')|trans|raw }}</h4>
                    <select class="form-select">
                        <option>{{ (channel ~ '.checkout.section1.rapports_option')|trans|raw }}</option>
                    </select>
                </div>
                <div class="my-3">
                    <label for="quantite">{{ (channel ~ '.checkout.section1.quantite')|trans|raw }}</label>
                    <input type="number" min="1" value="2" class="form-control" id="quantite">
                </div>
                <button class="btn btn-warning">{{ (channel ~ '.checkout.section1.bouton')|trans|raw }}</button>
                <ul>
                    <li>{{ (channel ~ '.checkout.section1.livraison')|trans|raw }}</li>
                    <li>{{ (channel ~ '.checkout.section1.garantie')|trans|raw }}</li>
                    <li>{{ (channel ~ '.checkout.section1.assistance')|trans|raw }}</li>
                </ul>
            </div>
        </div>
    </section>
