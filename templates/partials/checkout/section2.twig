<section class="my-5 bg-white py-5">
  <div class="container">
   <div class="row align-items-center">
       <div class="col-md-6">
           <img src="{{ webrootURL }}/public/media/{{ channel }}/image6.webp" alt="{{ (channel ~ '.checkout.section2.image.alt')|trans|raw }}" class="img-fluid rounded lazyload">
       </div>
       <div class="col-md-6">
           <h2>{{ (channel ~ '.checkout.section2.titre')|trans|raw }}</h2>
           <p>{{ (channel ~ '.checkout.section2.description')|trans({'%companyName%': companyName})|raw  }}}</p>
           <ul class="list-unstyled my-5">
               <li class="my-3">
                   <i class="fa-solid fa-circle-check text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point1')|trans|raw }}
               </li>
               <li class="my-3">
                   <i class="fa-solid fa-circle-check text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point2')|trans|raw }}
               </li>
               <li class="my-3">
                   <i class="fa-solid fa-circle-check text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point3')|trans|raw }}
               </li>
               <li class="my-3">
                   <i class="fa-solid fa-circle-check text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point4')|trans|raw }}
               </li>
           </ul>
       </div>
   </div>
 </div>
</section>
