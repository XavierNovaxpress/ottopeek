<section class="my-5 bg-white py-5">
  <div class="container">
   <div class="row align-items-center">
       <div class="col-md-6">
           <img src="{{ webrootURL }}/public/media/{{ channel }}/image6.png" alt="{{ (channel ~ '.checkout.section2.image.alt')|trans|raw }}" class="img-fluid rounded">
       </div>
       <div class="col-md-6">
           <h2 class="text-primary">{{ (channel ~ '.checkout.section2.titre')|trans|raw }}</h2>
           <p>{{ (channel ~ '.checkout.section2.description')|trans|raw({'%companyName%': companyName}) }}</p>
           <ul>
               <li>
                   <i class="bi bi-check-circle-fill text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point1')|trans|raw }}
               </li>
               <li>
                   <i class="bi bi-check-circle-fill text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point2')|trans|raw }}
               </li>
               <li>
                   <i class="bi bi-check-circle-fill text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point3')|trans|raw }}
               </li>
               <li>
                   <i class="bi bi-check-circle-fill text-primary me-2"></i> {{ (channel ~ '.checkout.section2.point4')|trans|raw }}
               </li>
           </ul>
       </div>
   </div>
 </div>
</section>
