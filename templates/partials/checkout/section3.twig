<section class="container my-5">
     <div class="row">
         <div class="col-md-6 d-flex flex-column justify-content-center">
             <h2>{{ (channel ~ '.checkout.section3.titre')|trans|raw }}</h2>
             <p>{{ (channel ~ '.checkout.section3.description')|trans({'%companyName%': companyName})|raw  }}</p>
             <p>{{ (channel ~ '.checkout.section3.paragraph1')|trans|raw }} <strong>{{ (channel ~ '.checkout.section3.important1')|trans|raw }}</strong>.</p>
             <p>{{ (channel ~ '.checkout.section3.paragraph2')|trans({'%companyName%': companyName})|raw  }} <strong>{{ (channel ~ '.checkout.section3.important2')|trans|raw }}</strong>.</p>
         </div>
         <div class="col-md-6  d-flex justify-content-end">
             <img src="{{ webrootURL }}/public/media/{{ channel }}/image1.webp" alt="{{ (channel ~ '.checkout.section3.image.alt')|trans|raw }}" class="img-fluid rounded lazyload">
         </div>
     </div>
</section>
