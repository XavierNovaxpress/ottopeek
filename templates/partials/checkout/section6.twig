<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        {% for i in 1..7 %}
            <div class="col-auto">
                <img src="{{ webrootURL }}/public/media/{{ channel }}/bottom-icon{{ i }}.png" alt="{{ (channel ~ '.home.section5.logo' ~ i ~ '.alt')|trans|raw }}" class="img-fluid">
            </div>
        {% endfor %}
    </div>

    <div class="row mt-5">
        <div class="col text-center">
            <div class="card rounded shadow-sm p-4 text-center">
                <h2 class="fw-bold">{{ (channel ~ '.checkout.section6.service_client.titre_principal')|trans|raw }}</h2>
                <h3 class="fw-bold text-primary">{{ (channel ~ '.checkout.section6.service_client.titre_secondaire')|trans|raw }}</h3>
                <p>{{ (channel ~ '.checkout.section6.service_client.contact_telephone')|trans|raw }}</p>
                <div class="d-flex justify-content-center align-items-center">
                    <i class="bi bi-telephone-fill text-primary fs-3"></i>
                    <span class="ms-2 fw-bold text-primary">{{ (channel ~ '.checkout.section6.service_client.numero_telephone')|trans|raw }}</span>
                </div>
                <p class="text-muted mt-3">{{ (channel ~ '.checkout.section6.service_client.horaires_dispo')|trans|raw }}</p>
            </div>
        </div>
    </div>
</div>
