
<section class="my-5 text-center bg-white py-5">
    <div class="container">
        <h2>{{ (channel ~ '.pricing.section2.titre')|trans|raw }}</h2>
        <p>{{ (channel ~ '.pricing.section2.sous-titre')|trans|raw }}</p>
        <div class="row justify-content-center">
            {% for i in 1..3 %}
              <div class="col-md-3">
                  <div class="icon-box">
                      <img src="{{ webrootURL }}/public/media/{{ channel }}/icon{{ i }}.svg" alt="" class="pt-5 pb-3 lazyload">
                      <h4>{{ (channel ~ '.pricing.section2.advantage' ~ i ~ '.titre')|trans|raw }}</h4>
                      <p>{{ (channel ~ '.pricing.section2.advantage' ~ i ~ '.description')|trans|raw }}</p>
                  </div>
              </div>
            {% endfor %}
        </div>
    </div>
</section>
