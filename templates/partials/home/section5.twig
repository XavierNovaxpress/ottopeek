<section class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="text-primary">{{ (channel ~ '.home.section5.titre')|trans|raw }}</h2>
            <p>{{ (channel ~ '.home.section5.description')|trans|raw }}</p>
            <input type="text" class="form-control w-50" placeholder="{{ (channel ~ '.home.section5.placeholder')|trans|raw }}">
            <button class="btn btn-warning mt-3">{{ (channel ~ '.home.section5.bouton')|trans|raw }}</button>
        </div>
        <div class="col-md-6 d-flex justify-content-end">
            <img src="{{ webrootURL }}/public/media/{{ channel }}/car1-big.png" alt="{{ (channel ~ '.home.section5.image.alt')|trans|raw }}" class="img-fluid">
        </div>
    </div>
    <div class="row justify-content-center mt-5 py-5">
        {% for i in 1..8 %}
            <div class="col-auto">
                <img src="{{ webrootURL }}/public/media/{{ channel }}/logocar{{i}}.png" alt="{{ (channel ~ '.home.section5.logo'~ i ~'.alt')|trans|raw }}" class="img-fluid">
            </div>
        {% endfor %}
    </div>
</section>
