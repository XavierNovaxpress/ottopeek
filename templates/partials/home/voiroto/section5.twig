<section class="bg-primary py-3">
  <div class="container mt-5">
        <div class="row align-items-center">
            <div class="col-md-5">
                <h2 class="text-light">{{ (channel ~ '.home.section5.titre')|trans|raw }}</h2>
                <p class="text-light fw-light py-4">{{ (channel ~ '.home.section5.description')|trans|raw }}</p>

                <form class="" id="" name="" action="#" method="post">
                    <div class="col-12">
                      <label for="#" class="col-form-label text-light">{{ (channel ~ '.home.section1.placeholder')|trans|raw }}</label>
                    </div>
                    <div class="row g-1 justify-content-center my-2">
                        <div class="col-12 bg-body p-2 shadow-sm rounded">
                            <div class="row">
                              <div class="col-md-6">
                                  <input type="text" class="form-control border-0" placeholder="">
                              </div>
                              <div class="col auto">
                                 <button class="btn btn-warning w-100 text-light rounded-0">{{ (channel ~ '.home.section1.bouton')|trans|raw }}</button>
                              </div>
                          </div>
                      </div>
                    </div>
                </form>
            </div>
            <div class="col-md-7 d-flex justify-content-end">
                <img src="{{ webrootURL }}/public/media/{{ channel }}/car1-big.webp" alt="{{ (channel ~ '.home.section5.image.alt')|trans|raw }}" class="img-fluid w-100 lazyload">
            </div>
        </div>
      </div>
</section>
