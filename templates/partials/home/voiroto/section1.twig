<section class="text-center py-5 bg-light hero-section">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-6 text-center text-md-start">
                <h1 class="display-4 text-dark fw-bold">{{ (channel ~ '.home.section1.titre')|trans|raw }}</h1>
                <p class="lead mb-4">{{ (channel ~ '.home.section1.sous-titre')|trans|raw }}</p>

                <form class="" id="vin-form" name="vin-form" action="#" method="post">
                    <div class="col-12">
                      <label for="#" class="col-form-label">{{ (channel ~ '.home.section1.placeholder')|trans|raw }}</label>
                    </div>

                    <div class="row g-1 justify-content-center my-2">
                        <div class="col-12 bg-body p-2 shadow-sm rounded">
                            <div class="row">
                              <div class="col-md-6">
                                  <input type="text" class="form-control border-0" placeholder="">
                              </div>
                              <div class="col auto">
                                 <button class="btn btn-warning w-100 text-light rounded-0">{{ (channel ~ '.home.section1.bouton')|trans|raw }}</button>
                              </div>
                          </div>
                      </div>
                    </div>
                </form>

            </div>
            <div class="col-md-6">
                <img src="{{ webrootURL }}/public/media/{{ channel }}/car1.webp" alt="{{ (channel ~ '.home.section1.image.alt')|trans|raw }}" class="img-fluid lazyload">
            </div>
        </div>
    </div>
    <div class="container position-relative">
            <div class="row justify-content-center mt-5 stats-row bg-light w-75 m-auto p-4 border">
                <div class="col-4 text-center">
                    <span class="d-block font-weight-bold">97%</span>
                    <small class="text-muted">{{ (channel ~ '.home.section1.stats1')|trans|raw }}</small>
                </div>
                <div class="col-4 text-center">
                    <span class="d-block font-weight-bold">865</span>
                    <small class="text-muted">{{ (channel ~ '.home.section1.stats2')|trans|raw }}</small>
                </div>
                <div class="col-4 text-center">
                    <span class="d-block font-weight-bold">2761</span>
                    <small class="text-muted">{{ (channel ~ '.home.section1.stats3')|trans|raw }}</small>
                </div>
            </div>
    </div>
</section>
